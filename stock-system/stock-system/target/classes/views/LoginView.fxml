<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lobo24.controllers.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f0f0f0;">
            <!-- Logo/Título -->
            <Text text="Sistema de Stock Lobo" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #333333;"/>

            <!-- Mensaje de conexión -->
            <Text text="Conectando con servidor..." style="-fx-font-size: 14px; -fx-fill: #555555;"/>

            <!-- Formulario -->
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Botón -->
            <Button text="Entrar" fx:id="btnEntrar" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <!-- Versión -->
            <Text text="Versión: 1.0" style="-fx-font-size: 12px; -fx-fill: #777777;"/>
        </VBox>
    </center>
</BorderPane>