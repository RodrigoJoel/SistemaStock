<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lobo24.controllers.NuevoProductoController" spacing="10" style="-fx-padding: 20;">

    <!-- Encabezado -->
    <Label text="Datos del Producto" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Button text="Datos del producto" style="-fx-font-weight: bold; -fx-background-color: #e0e0e0;"/>
        <Button text="Combo"/>
        <Button text="Tasa"/>
        <Button text="Proveedores"/>
        <Button text="Opciones"/>
        <Button text="Validad"/>
    </HBox>

    <!-- Grid con campos de código -->
    <GridPane hgap="10" vgap="10">
        <!-- Código -->
        <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <TextField fx:id="codigoField" style="-fx-pref-width: 150;"/>
            <CheckBox fx:id="codigoAutoCheck" text="Automático"/>
        </HBox>

        <!-- Código Extra -->
        <Label text="Código Extra:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="codigoExtraField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- EAN / GTIN -->
        <Label text="EAN / GTIN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="eanField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Campos principales -->
    <VBox spacing="10">
        <TextField fx:id="descripcionField" promptText="Descripción/Nombre"/>
        <ComboBox fx:id="categoriaComboBox" promptText="Categoría"/>
        <TextField fx:id="marcaField" promptText="Marca"/>

        <!-- Precio de venta -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="precioField" promptText="Precio de venta" style="-fx-pref-width: 150;"/>
            <CheckBox fx:id="precioAutoCheck" text="Automático"/>
            <CheckBox fx:id="precioEditableCheck" text="Cambiar precio en venta"/>
        </HBox>

        <TextField fx:id="precioCosteField" promptText="Precio de coste"/>
        <TextField fx:id="incrementoField" promptText="de incremento %"/>
        <CheckBox fx:id="consultaStockCheck" text="Consulta de stock"/>
        <TextField fx:id="stockField" promptText="Stock actual"/>
        <TextField fx:id="stockMinimoField" promptText="Stock mínimo (alerta)"/>
    </VBox>

    <!-- Opciones adicionales -->
    <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
        <CheckBox fx:id="precioEnVentaCheck" text="Cambiar precio en el momento de la venta"/>
        <CheckBox fx:id="observacionCheck" text="Añadir observación - F4"/>
    </VBox>

    <!-- Botones -->
    <HBox spacing="10" style="-fx-padding: 20 0 0 0; -fx-alignment: CENTER;">
        <Button text="GUARDAR - F2" onAction="#guardarProducto" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="CANCELAR" onAction="#cerrarVentana" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
</VBox>
