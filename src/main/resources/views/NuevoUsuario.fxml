<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.lobo24.controllers.NuevoUsuarioController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;" prefWidth="450">

    <!-- Título -->
    <Label text="Nuevo Usuario" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Formulario -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="300"/>
        </columnConstraints>

        <!-- Inicial -->
        <Label text="Inicial:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtInicial" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Nombre -->
        <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Email -->
        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Rol -->
        <Label text="Rol:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbRol" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Botón de Permisos -->
        <Button text="Permisos" onAction="#gestionarPermisos" GridPane.rowIndex="4" GridPane.columnIndex="1"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-pref-width: 120;"/>
    </GridPane>

    <!-- Botones de acción -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#cancelar"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        <Button text="Guardar" onAction="#guardarUsuario"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>
</VBox>