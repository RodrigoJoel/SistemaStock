<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lobo24.controllers.EstadisticasController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button fx:id="btnRegresar" mnemonicParsing="false" onAction="#onRegresarClick" text="&lt; Resumen" />
                        <Label fx:id="lblTitulo" text="Estadísticas">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                        </HBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Visión general" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Resumen" styleClass="selected-menu-item" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <DatePicker fx:id="datePicker" promptText="1/3/2025 hasta 31/3/2025" />
                        <ComboBox fx:id="comboFechaTransaccion" prefWidth="200.0" promptText="por fecha de transacción" />
                        <ComboBox fx:id="comboHora" prefWidth="100.0" promptText="Hora" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <VBox alignment="CENTER" spacing="5.0" styleClass="stats-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Facturación" />
                                <Label fx:id="lblFacturacion" styleClass="stats-value">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0" styleClass="stats-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Cant. de Ventas" />
                                <Label fx:id="lblCantVentas" styleClass="stats-value">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0" styleClass="stats-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Ticket medio" />
                                <Label fx:id="lblTicketMedio" styleClass="stats-value">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0" styleClass="stats-box" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Ganancias" />
                                <Label fx:id="lblGanancias" styleClass="stats-value">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <AnchorPane VBox.vgrow="ALWAYS">
                    <children>
                        <BarChart fx:id="barChartVentas" animated="false" legendVisible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" fx:id="xAxisHora" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="yAxisVentas" side="LEFT" />
                            </yAxis>
                        </BarChart>
                    </children>
                </AnchorPane>
                <TableView fx:id="tableVentas" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="colHora" prefWidth="100.0" text="Hora" />
                        <TableColumn fx:id="colVentas" prefWidth="100.0" text="Ventas" />
                        <TableColumn fx:id="colTicketMedio" prefWidth="150.0" text="Ticket medio" />
                        <TableColumn fx:id="colGanancias" prefWidth="150.0" text="Ganancias" />
                        <TableColumn fx:id="colFacturacion" prefWidth="150.0" text="Facturación" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </center>
    <left>
        <VBox prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="btnRentabilidad" text="Rentabilidad" styleClass="menu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnIngresosGastos" text="Ingresos / Gastos" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorProductoVendido" text="por Producto vendido" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnProveedores" text="Proveedores" styleClass="menu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnComprasPorProducto" text="Compras por Producto" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnVentasAnalitico" text="Ventas Analítico" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnComprasPorProveedor" text="Compras por Proveedor" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnVentasSintetico" text="Ventas Sintético" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnVentas" text="Ventas" styleClass="menu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnMediosPago" text="Medios de pago" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnComisionPorVendedor" text="Comisión por vendedor" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnHorarioPunta" text="Horario punta" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorCategoriaProducto" text="por Categoría y producto" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorVendedor" text="por Vendedor" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorProducto" text="por Producto" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorMarca" text="por Marca" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorClienteCategoria" text="por Cliente y categoría" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorClienteProducto" text="por Cliente y producto" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorCombo" text="por Combo" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnVentasRetencion" text="Ventas / Retención" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
                <Label fx:id="btnPorTasa" text="por Tasa" styleClass="submenu-item" onMouseClicked="#onMenuItemClicked" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
</BorderPane>