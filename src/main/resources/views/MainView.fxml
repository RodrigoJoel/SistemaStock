<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lobo24.controllers.MainController" stylesheets="@styles.css"
            prefWidth="1000" prefHeight="700" minWidth="800" minHeight="600">

    <!-- Top: Encabezado -->
    <top>
        <VBox alignment="CENTER" style="-fx-background-color: #2c3e50;">
            <Label text="Sistema de ventas Lobo24"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 15 0 5 0;"/>
            <Label fx:id="lblUsuario" style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1; -fx-padding: 0 0 15 0;"/>
        </VBox>
    </top>

    <!-- Left: Menú de botones (ahora con ScrollPane) -->
    <left>
        <ScrollPane fitToWidth="true" style="-fx-background: #34495e;">
            <VBox fx:id="menuVertical" spacing="5" style="-fx-background-color: #34495e; -fx-padding: 10 0;">
                <Button text="🛒 Ventas" onAction="#handleMenuAction" userData="Ventas"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
                <Button text="👥 Clientes" onAction="#handleMenuAction" userData="Clientes"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
                <Button text="📦 Productos" onAction="#handleMenuAction" userData="Productos"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
                <Button text="📊 Stock" onAction="#handleMenuAction" userData="Stock"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
                <!--  <Button text="🛍️ Catálogo Online" onAction="#handleMenuAction" userData="Catálogo Online"
                         styleClass="menu-button" maxWidth="Infinity" minHeight="40"/>-->
                <Button text="💸 Cuentas a Pagar" onAction="#handleMenuAction" userData="Cuentas a Pagar"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
                <Button text="💼 Caja" onAction="#handleMenuAction" userData="Caja"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
                <Button text="📈 Estadísticas" onAction="#handleMenuAction" userData="Estadísticas"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
                <Button text="🎓 Tutoriales" onAction="#handleMenuAction" userData="Tutoriales"
                        styleClass="menu-button" maxWidth="Infinity" minHeight="60"/>
    <!--     <Button text="📱 App" onAction="#handleMenuAction" userData="Tutoriales"
             styleClass="menu-button" maxWidth="Infinity" minHeight="40"/>
             -->
 </VBox>
</ScrollPane>
</left>

<!-- Center: Área de contenido principal -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1;">
            <Label text="Selecciona una opción del menú" style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;"/>
        </StackPane>
    </center>
</BorderPane>