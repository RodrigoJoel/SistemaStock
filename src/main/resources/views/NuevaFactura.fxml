<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lobo24.controllers.NuevaFacturaDialogController"
      spacing="15" prefWidth="450" prefHeight="500">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Nueva Factura" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
        </columnConstraints>

        <!-- Status -->
        <Label text="Status:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboStatus" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Pendiente"/>
                    <String fx:value="Pago"/>
                    <String fx:value="Vencido"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Fecha de Vencimiento -->
        <Label text="Vencimiento:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateFechaVencimiento" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Valor -->
        <Label text="Valor:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <Label text=""/>
            <TextField fx:id="txtValor"/>
        </HBox>

        <!-- Referente -->
        <Label text="Referente a:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtReferente" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Proveedor -->
        <Label text="Proveedor:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtProveedor" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Tipo -->
        <Label text="Tipo:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboTipo" GridPane.rowIndex="5" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Factura"/>
                    <String fx:value="Recibo"/>
                    <String fx:value="Nota de Crédito"/>
                    <String fx:value="Nota de Débito"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Notas o comentarios adicionales -->
        <Label text="Notas:" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
        <TextArea fx:id="txtNotas" GridPane.rowIndex="6" GridPane.columnIndex="1" prefHeight="100"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnCancelar" text="Cancelar" prefWidth="100"/>
        <Button fx:id="btnGuardar" text="Guardar" prefWidth="100" defaultButton="true"/>
    </HBox>
</VBox>